<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>
            <gradient android:startColor="@color/colorDarkBlue" android:endColor="@color/colorDarkBlue" />
            <corners android:radius="45dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/colorDarkBlue" android:endColor="@color/colorDarkBlue" />
            <corners android:radius="45dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/colorLightBlue" android:endColor="@color/colorLightBlue" />
            <corners android:radius="45dp" />
        </shape>
    </item>
</selector>