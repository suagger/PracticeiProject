<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/list_selecter"
            android:textSize="12sp"
            android:textColor="@drawable/color_radiobutton"
            android:text="清单"
            />

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/remind_selector"
            android:textSize="12sp"
            android:textColor="@drawable/color_radiobutton"
            android:text="提醒"
            />

        <RadioButton
            android:id="@+id/rb_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/color_radiobutton"
            android:drawableTop="@drawable/recommand_selector"
            android:textSize="12sp"
            android:text="提醒"
            />

        <RadioButton
            android:id="@+id/rb_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/count_selector"
            android:textSize="12sp"
            android:textColor="@drawable/color_radiobutton"
            android:text="统计"
            />
    </RadioGroup>
</layout>
